<%= render :partial=>'layouts/customer_leftside_bar' %>
<div id="center-column">
<div class="gridDiv">
  <div class="titleHead">Serialize</div>
  <div class="formMain">
    <% form_for(@serialize) do |f| %>
      <%= f.error_messages %>
    <table width="100%" cellpadding="0" cellspacing="0">
      <tr>
        <td width="75%" valign="top">
          <table width="100%" cellpadding="0" cellspacing="0">
            <tr>
              <td>
                <p>
              <%= f.label "Customer name"%>
              <%=f.collection_select(:customer_id, Customer.all,:id,:name,{:include_blank => "---Select---"})%>
            </p>
              </td>
              <td>
                
            <p>
              <label>Serial Name/No.</label>
              <%= f.text_field :name %>
            </p>
              </td>
              <td>
                <p>
              <%= f.label :specification %>
              <%=f.collection_select(:specification_id, Specification.all,:id,:specification_name,{:include_blank => "---Select---"})%>
            </p>
              </td>
            </tr>
             <tr>
              <td>
                
            <p>
              <label>Type</label>
             
              <%= select_tag("#{"serialize"}[mat_type]","<option value=''/>--Select--" +options_for_select([ 'E','S','R']),{:onchange => "change_tubesize(this.value);"}) %>
            </p>
              </td>
              <td>
                
            <p>
              <label>Annealead/Unannealed</label>
              <%= f.select("annealed_unannealed", { "ANN" => "ANN", "UAN" => "UAN"}) %>
            </p>
              </td>
              <td>
                
            <p>
              <label>Fin Cut/Non Fincut</label>
              <%= f.select("fincut_non_fincut", { "F/C" => "F/C", "NFC" => "NFC"}) %>
            </p>

              </td>
            </tr>
            <tr>
              <td>
                  <p>
              <label>End Condition</label>
              <%= f.text_area :end_condition,:rows=>5,:cols=>20%>
            </p>
              </td>
              <td>
                
            <p>
              <label>Packing Mode</label>
              <%= f.text_area :packing_mode,:rows=>5,:cols=>20%>
            </p>
              </td>
            </tr>
          </table>
        </td>
        <td width="25%" valign="top">
           <div id="detail"></div>
                  <p>
              <%= f.label :grade %>
              <%= f.text_field :grade%>
            </p>
        </td>
      </tr>
    </table>       
       <br class="clear"/>  <div class="txtC" id="submit_div" >
            <%= f.submit "Create" , :class=>'button submit_buttons'%>
            <%=link_to 'Cancel',serializes_path, :class=>'button submit_buttons cancelbutton' %>
          </div>
     
    </div>
  <% end %>
</div>
</div>