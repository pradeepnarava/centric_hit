<%= render :partial=>'layouts/centric_left_bar' %>
<div id="center-column">
<div class="top-bar">
  <%= link_to 'New', new_role_path,:class=>"button" %>
    <h1>Listing Roles</h1>
</div><br />
<div class="table">  
  <%= image_tag '/images/bg-th-left.gif',:height=>"7", :width=>"8",:alt=>"",:title=>"",:class=>"left" %>
  <%= image_tag '/images/bg-th-right.gif',:height=>"7", :width=>"7",:alt=>"",:title=>"",:class=>"right" %>

    <table class="listing" cellpadding="0" cellspacing="0" width="100%">
  <tr>
    <th>Name</th>
     <th>Action</th>
  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%=h role.name %></td>
    <td>
          <%=  link_to(image_tag('/images/livia_portal/icon_edit.gif',{:alt =>"Edit", :title=>"Edit", :border => 0, :hspace => "0"}),  edit_role_path(role))%>
          <%=  link_to(image_tag('/images/livia_portal/icon_reject_1.gif',{:alt =>"DeActivate", :title=>"DeActivate", :confirm => 'Are you sure?',:border => 0, :hspace => "2"}), role, :confirm => 'Are you sure?', :method => :delete) %>
        </td>
  </tr>
<% end %>
</table>

<br />

</div>