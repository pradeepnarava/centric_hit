<%= render :partial=>'layouts/process_leftside_bar' %>
<div id="center-column">
<div class="top-bar">
  <%= link_to 'New',  new_uncoiler_report_path,:class=>"button" %>
  <h1>Listing Uncoiler Reports</h1>
</div><br />
<div class="table">
  <%= image_tag '/images/bg-th-left.gif',:height=>"7", :width=>"8",:alt=>"",:title=>"",:class=>"left" %>
  <%= image_tag '/images/bg-th-right.gif',:height=>"7", :width=>"7",:alt=>"",:title=>"",:class=>"right" %>
  <table class="listing" cellpadding="0" cellspacing="0" width="100%">
            <tr>
              <th>Date</th>
              <th>Shift</th>
              <th>Operator name</th>
              <th>Slitting coil no</th>
              <th>Width</th>
              <th>Thickness</th>
              <th>Grade</th>
              <th>Type</th>
              <th>Action</th>
            </tr>

            <% for uncoiler_report in @uncoiler_reports %>
              <tr>
                <td><%=h uncoiler_report.date.strftime('%d-%b-%Y') %></td>
                <td><%=h uncoiler_report.shift %></td>
                <td><%=h Employee.getname(uncoiler_report.operator_id) rescue "-"%></td>
                <td><%=h uncoiler_report.slittingproduction.slitting_coil_no %></td>
                <td><%=h uncoiler_report.width_actual %></td>
                <td><%=h uncoiler_report.thickness_actual %></td>
                <td><%=h uncoiler_report.grade_actual %></td>
                <td><%=h uncoiler_report.type_actual %></td>
                <td>
                  <div class="fr" style="float:left;">
                    <%=  link_to(image_tag('/images/livia_portal/icon_edit.gif',{:alt =>"Edit", :title=>"Edit", :border => 0, :hspace => "0"}),  edit_uncoiler_report_path(uncoiler_report) )%>
                    <%=  link_to(image_tag('/images/livia_portal/icon_reject_1.gif',{:alt =>"DeActivate", :title=>"DeActivate", :confirm => 'Are you sure?',:border => 0, :hspace => "2"}), uncoiler_report, :confirm => 'Are you sure?', :method => :delete ) %>
                  </div>
                </td>
              </tr>
            <% end %>
          </table>
        </div>
<br />
</div>