<%= render :partial=>'layouts/stock_leftside_bar' %>
<div id="center-column">
<div class="top-bar">
  <%= link_to 'New', new_rawmaterial_path,:class=>"button" %>
  <h1>Listing RawMaterials</h1>
</div><br />
<div class="table">
  <%= image_tag '/images/bg-th-left.gif',:height=>"7", :width=>"8",:alt=>"",:title=>"",:class=>"left" %>
  <%= image_tag '/images/bg-th-right.gif',:height=>"7", :width=>"7",:alt=>"",:title=>"",:class=>"right" %>
  <table class="listing" cellpadding="0" cellspacing="0" width="100%">
  <tr>
    <th>Coil No</th>
    <th>Category/Type</th>    
    <th>Grade</th>
    <th>Width</th>
    <th>Thickness</th>
    <th>Coil weight</th>
    <th>Status</th>
    <th>Action</th>
  </tr>

<% for rawmaterial in @rawmaterials %>
  <tr class="<%=cycle("bg1", "bg2")%>">
    <td><%=h rawmaterial.name %></td>
    <td><%=h rawmaterial.rawmaterial_category.name rescue "-" %></td>    
    <td><%=h rawmaterial.grade rescue "-"%></td>
    <td><%=h rawmaterial.width %></td>
    <td><%=h rawmaterial.thickness %></td>
    <td><%=h rawmaterial.coil_weight %></td>
    <td>
      <%if rawmaterial.status==0%>Stock<%end%>
  <%if rawmaterial.status==1%>Slitting WIP<%end%>
  <%if rawmaterial.status==2%>Tube Mill WIP<%end%>
    </td>



    <td>
          <%=  link_to(image_tag('/images/livia_portal/icon_edit.gif',{:alt =>"Edit", :title=>"Edit", :border => 0, :hspace => "0"}),  edit_rawmaterial_path(rawmaterial))%>
          <%=  link_to(image_tag('/images/livia_portal/icon_reject_1.gif',{:alt =>"DeActivate", :title=>"DeActivate", :confirm => 'Are you sure?',:border => 0, :hspace => "2"}), rawmaterial, :confirm => 'Are you sure?', :method => :delete) %>
      </td>
  </tr>
<% end %>
</table>
</div>
<br />
</div>


