  <script type="text/javascript">
  livia_datepicker();
  </script>
<%= render :partial=>'layouts/stock_leftside_bar' %>
<div id="center-column">
<div class="gridDiv">
  <div class="titleHead">Rawmaterial Receipt</div>
  <div class="formMain">
    <% form_for(@rawmaterial) do |f| %>
    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="table_label">
        <tr>
          <td>
            <%if(@rawmaterial.errors.length >0)%>
          <div class='errorCont'>
            <%= error_messages_for(:rawmaterial)%>
            <div class="clear"></div>
          </div>
          <%end%>
          </td>
        </tr>
        <tr>
          <td valign="top" align="center">
            <div style="padding-left:100px;">
              <table width="50%" border="0" cellspacing="0" cellpadding="2">
                  <tr>
                  <td class="textBlack11Height10L"><%= f.label "Supplier" %><span class="text_red">*</span></td>
                  <td><%=f.collection_select( :address_id, @addresses,:id,:company_name,{:include_blank => "--- Select ---"})%></td>
                </tr>
                <tr>
                  <td class="textBlack11Height10L"><%= f.label "Rawmaterial Category" %><span class="text_red">*</span></td>
                  <td><%=f.collection_select( :rawmaterial_category_id, @rawmaterialcategory,:id,:name,{:include_blank => "--- Select ---"})%></td>
                </tr>
                <tr>
                  <td class="textBlack11Height10L"><%= f.label "Supplier Invoice No" %></td>
                  <td align="left"><%= f.text_field :invoice_no %></td>
                </tr>                  
                <tr>
                  <td class="textBlack11Height10L"><%= f.label "Coil Number" %><span class="text_red">*</span></td>
                  <td align="left"><%= f.text_field :name %></td>
                </tr>                
                <tr>
                  <td class="textBlack11Height10L"><%= f.label :width %><span class="text_red">*</span></td>
                  <td align="left"><%= f.text_field :width %></td>
                </tr>
                <tr>
                  <td class="textBlack11Height10L"><%= f.label :thickness %><span class="text_red">*</span></td>
                  <td align="left"><%= f.text_field :thickness %></td>
                </tr>
                <tr>
                  <td class="textBlack11Height10L"><%= f.label :coil_weight %><span class="text_red">*</span></td>
                  <td align="left"><%= f.text_field :coil_weight %></td>
                </tr>   
                 <tr>
                  <td class="textBlack11Height10L"><%= f.label :grade %><span class="text_red">*</span></td>
                  <td align="left"><%= f.text_field :grade %></td>
                </tr>
                 <tr>
                    <td class="textBlack11Height10L"><%= f.label :dateofreciept %><span class="text_red">*</span></td>
                      <td align="left">
                        <%= f.text_field :dateofreciept, :class=>'dateTextBox date_picker'%></td>
                 </tr>
              </table>
            </div>
          </td>
        </tr>     
        <tr>
          <td>
            <br class="clear" />
            <div class="txtC">
              <%= f.submit "Create" , :class=>'button submit_buttons'%>
              <%=link_to 'Cancel',rawmaterials_path, :class=>'linkbutton' %>
            </div>
          </td>
        </tr>
      </table>
    <% end %>
    <br class="clear" />
  </div>
</div>

</div>
