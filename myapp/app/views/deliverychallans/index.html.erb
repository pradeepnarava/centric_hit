  </tr>

<% for deliverychallan in @deliverychallans %>
  <tr class="<%=cycle("bg1", "bg2")%>">
     <td><%#=h deliverychallan.customer_order.customer.name %></td>
    <td><%=h deliverychallan.delivery_challan_no %></td>
    <td><%=h deliverychallan.date %></td>
    <td><%=h deliverychallan.vehicle_no %></td>
    <td><%=h deliverychallan.od %></td>
    <td><%=h deliverychallan.length %></td>
    <td><%=h deliverychallan.thickness %></td>
    <td><%=h deliverychallan.quantity_pcs %></td>
    <td><%=h deliverychallan.quantity_mtrs %></td>
   <!-- <td><%#=h deliverychallan.remark %></td>
    <td><%#=h deliverychallan.vat_tin %></td>
    <td><%#=h deliverychallan.cst_tin %></td>
    <td><%#=h deliverychallan.from %></td>
    <td><%#=h deliverychallan.to %></td>-->
    <td>
     <div class="fr" style="float:left;">
          <%=  link_to(image_tag('/images/livia_portal/icon_edit.gif',{:alt =>"Edit", :title=>"Edit", :border => 0, :hspace => "0"}),  edit_deliverychallan_path(deliverychallan) )%>
          <%=  link_to(image_tag('/images/livia_portal/icon_reject_1.gif',{:alt =>"DeActivate", :title=>"DeActivate", :confirm => 'Are you sure?',:border => 0, :hspace => "2"}),deliverychallan, :confirm => 'Are you sure?', :method => :delete ) %>
        </div>
</td>
  </tr>
<% end %>
</table>
</div>
<br />
</div>

