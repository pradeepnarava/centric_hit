<%= render :partial=>'layouts/delivery' %>
<div id="center-column">
<div class="top-bar">
  <%= link_to 'New', new_deliverychallan_path,:class=>"button" %>
  <h1>Listing deliverychallans</h1>
</div><br />
<div class="table">
  <%= image_tag '/images/bg-th-left.gif',:height=>"7", :width=>"8",:alt=>"",:title=>"",:class=>"left" %>
  <%= image_tag '/images/bg-th-right.gif',:height=>"7", :width=>"7",:alt=>"",:title=>"",:class=>"right" %>
  <table class="listing" cellpadding="0" cellspacing="0" width="100%">
  <tr>
     <th>Customer name</th>
    <th>Delivery challan no</th>
    <th>Date</th>
    <th>Vehicle no</th>
    <th>Od</th>
    <th>Length</th>
    <th>Thickness</th>
    <th>Quantity pcs</th>
    <th>Quantity mtrs</th>
