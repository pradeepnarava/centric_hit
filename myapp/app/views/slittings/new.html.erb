<div class="gridDiv">
  <div class="titleHead">New slitting</div>
  <div class="formMain">
    <% form_for(@slitting) do |f| %>
      <%= f.error_messages %>
      <div>
        <!--BOX 1-->
        <div class="mt5">
        </div>
        <div class="fl w48" style="width: 48%;" >
          <div>
            <p><%= f.label "Rawmaterial" %>
            <%=f.collection_select( :rawmaterial_id, Rawmaterial.all,:id,:name,{:include_blank => "----------Select----------"})%>
            </p><p>
              <%= f.label :slitting_coil_no %>
              <%= f.text_field :slitting_coil_no %>
            </p>
            <p>
              <%= f.label :coil_width %>
              <%= f.text_field :coil_width %>
            </p>
            <p>
              <%= f.label :coil_weight %>
              <%= f.text_field :coil_weight %>
            </p>
            <p>
              <%= f.label :side_trim %>
              <%= f.text_field :side_trim %>
            </p>
             <p>
              <%= f.label :thickness %>
              <%= f.text_field :thickness %>
            </p>
          </div>
        </div>
        <div style="width: 52%;" class="fr">
          <div>
           
            <p>
              <%= f.label :scrap %>
              <%= f.text_field :scrap %>
            </p>
            <p>
              <%= f.label :slit_width %>
              <%= f.text_field :slit_width %>
            </p>
            <p>
              <%= f.label :slit_weight %>
              <%= f.text_field :slit_weight %>
            </p>
            <p>
              <%= f.label :no_of_slits %>
              <%= f.text_field :no_of_slits %>
            </p>
            <p>
              <%= f.label :weight %>
              <%= f.text_field :weight %>
            </p>
            <p>
              <%= f.label :remarks %>
              <%= f.text_field :remarks %>
            </p>
          </div>
        </div>
        <br class="clear"/>
        <div class="txtC" id="submit_div">
          <%= f.submit "Create" , :class=>'button submit_buttons'%>
        </div>
        <br class="clear"/>
      </div>
    <% end %>
  </div>
</div>