<%= render :partial=>'layouts/process_leftside_bar' %>
<div id="center-column">
<div class="top-bar">
  <h1>Listing Tube Mill Productions</h1>
</div><br />
<div class="table">
  <%= image_tag '/images/bg-th-left.gif',:height=>"7", :width=>"8",:alt=>"",:title=>"",:class=>"left" %>
  <%= image_tag '/images/bg-th-right.gif',:height=>"7", :width=>"7",:alt=>"",:title=>"",:class=>"right" %>
  <table class="listing" cellpadding="0" cellspacing="0" width="100%">
  <tr>
    <th>Customer</th>
    <th>Slit Coil No.</th>
    <th>Lot No.</th>        
    <th>Operator</th>
    <th>Inspector</th>
    <th>Date</th>
    <th>Shift</th>
    <th>Prime</th>
    <th>Reject</th>
    <th>Yield %</th>
    <th>Action</th>
  </tr>

<% @tube_mill_performance_reports.each do |tube_mill| %>
  <tr class="<%=cycle("bg1", "bg2")%>">
    <td><%=h tube_mill.customer.name %></td>
    <td><%=h tube_mill.slittingproduction.slitting_coil_no%></td>
    <td><%=h tube_mill.lot_no %></td>    
    <td><%=h tube_mill.operator_name %></td>
    <td><%=h tube_mill.inspector_name %></td>
    <td><%=h tube_mill.date.strftime('%d-%b-%Y') %></td>
    <td><%=h tube_mill.shift%></td>
    <td><%=h tube_mill.prime %></td>
    <td><%=h tube_mill.rejected %></td>
    <td><%=h tube_mill.yieldpercent %></td>
    <td>
      <div class="fr" style="float:left;">
          <%=  link_to(image_tag('/images/livia_portal/icon_edit.gif',{:alt =>"View Detail", :title=>"View Detail", :border => 0, :hspace => "0"}),  production_detail_tube_mill_performance_report_path(tube_mill) )%>
          <%=  link_to(image_tag('/images/livia_portal/icon_reject_1.gif',{:alt =>"DeActivate", :title=>"DeActivate", :confirm => 'Are you sure?',:border => 0, :hspace => "2"}),tube_mill, :confirm => 'Are you sure?', :method => :delete) %>
        </div>
    </td>
  </tr>
<% end %>
</table>
</div>
<br />
</div>
