<%= render :partial=>'layouts/process_leftside_bar' %>
<div id="center-column">
<div class="top-bar">
  <%= link_to 'New', new_tube_mill_performance_report_path,:class=>"button" %>
  <h1>Listing Tube Mill Performance Reports</h1>
</div><br />
<div class="table">
  <%= image_tag '/images/bg-th-left.gif',:height=>"7", :width=>"8",:alt=>"",:title=>"",:class=>"left" %>
  <%= image_tag '/images/bg-th-right.gif',:height=>"7", :width=>"7",:alt=>"",:title=>"",:class=>"right" %>
  <table class="listing" cellpadding="0" cellspacing="0" width="100%">
  <tr>
    <th>Date</th>
    <th>Shift</th>
    <th>Lot No.</th>
    <th>Slit Coil No.</th>
    <th>No. of Tubes</th>
    <th>Customer</th>
    <th>Status</th>
    <th>Action</th>
  </tr>

<% for tube_mill_performance_report in @tube_mill_performance_reports %>
  <tr class="<%=cycle("bg1", "bg2")%>">
    <td><%=h tube_mill_performance_report.date.strftime('%d-%b-%Y') %></td>
    <td><%=h tube_mill_performance_report.shift %></td>
    <td><%=h tube_mill_performance_report.lot_no %></td>
    <td><%=h tube_mill_performance_report.slittingproduction.slitting_coil_no  if tube_mill_performance_report.slittingproduction %></td>
    <td><%=h tube_mill_performance_report.no_of_tube %></td>
    <td><%=h tube_mill_performance_report.customer.name rescue "-" %></td>
    <td><%=h tube_mill_performance_report.status==1?'Tube WIP':'-' %></td>
    <td>
      <div class="fr" style="float:left;">
          <%=  link_to(image_tag('/images/icon_details.gif',{:style=>"width:20px;height:20px;", :alt =>"View Detail", :title=>"View Detail", :border => 0, :hspace => "0"}),  tube_mill_performance_report_path(tube_mill_performance_report) )%>
          <%=  link_to(image_tag('/images/livia_portal/icon_edit.gif',{:alt =>"Edit", :title=>"Edit", :border => 0, :hspace => "0"}),  edit_tube_mill_performance_report_path(tube_mill_performance_report) )%>
          <%=  link_to(image_tag('/images/livia_portal/icon_reject_1.gif',{:alt =>"DeActivate", :title=>"DeActivate", :confirm => 'Are you sure?',:border => 0, :hspace => "2"}),tube_mill_performance_report, :confirm => 'Are you sure?', :method => :delete) %>
        </div>
    </td>
  </tr>
<% end %>
</table>
</div>
<br />
</div>
