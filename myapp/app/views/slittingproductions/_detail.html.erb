<p>Mother Coil Detail</p>
<table border="1" width="70%">
  <tr>
    <th>CLS Coil No.</th>
    <th>Input wt</th>
    <th>Width</th>
    <th>Thickness</th>
    <th>Grade</th>
  </tr>
  <tr>
    <td><%=h @coil.name%></td>
    <td><%=h @coil.coil_weight%></td>
    <td><%=h @coil.width%></td>
    <td><%=h @coil.thickness%></td>
    <td><%=h @coil.grade%></td>
  </tr>
</table>  
<br class="clear"/>
<%unless @slittings.blank?%>
<p>Slitting Setting Detail</p>
<div>
  <table border="1" width="70%">
    <%i=1%>
    <%#@coil.slittings.each do |slits|%>
    <%@slittings.each do |slits|%>
    <tr>
      <th>Width</th>
      <th>Coil wt.</th>
      <th>Scrap</th>
      <th>No. of Slits</th>
      <th>No. of Produced Slits</th>
    </tr>
      <tr>
        <td><%= h slits.slit_width %></td>
        <td><%= h slits.total_weight %></td>
        <td><%= h slits.scrap %></td>
        <td><%= h slits.no_of_slits %></td>
        <td><%= h slits.produced_no_of_slit %></td>
      </tr>
      <tr>
        <td>&nbsp;</td>
        <td colspan="4">
          <table style="font-size:11px;" border="1" width="100%">
            <tr>
              <td>Width</td>
              <td>Coil wt</td>
              <td>Slit Coil No</td>
            </tr>
            <%for sub in 1..(slits.no_of_slits.to_i - slits.produced_no_of_slit.to_i)%>
              <tr>
                <td><%= h slits.slit_width%></td>
                <td><%= h slits.slit_weight%></td>
                <td><%= text_field_tag "#{slits.id}[#{sub}][slitting_coil_no]",@slitting_coilno+"#{i}" %></td>
              </tr>
              <%i = i + 1%>
            <%end%>
          </table>
        </td>
      </tr>

    <%end%>    
  </table>
</div>
<%else%>
<p style="color:#cc0000">No Slitting Plan for this coil.</p>
<%end%>