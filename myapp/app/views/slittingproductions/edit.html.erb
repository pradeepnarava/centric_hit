
<script type="text/javascript">
    livia_datepicker();
</script>
<%= render :partial=>'layouts/process_leftside_bar' %>
<div id="center-column">
<div class="gridDiv">
  <div class="titleHead">Editing Slittingproduction</div>
  <div class="formOrder">
    <% form_for(@slittingproduction) do |f| %>
        <%= f.error_messages %>
        <table>
          <tr>
            <td><label>Mother Coil No:</label></td>
            <td><%=f.collection_select( :rawmaterial_id, @coils,:id,:name,{:include_blank => "---Select---"},{:onchange => "slitproductioncoildetail(this.value);"})%></td>
          </tr>
        </table>
        <table>
          <tr>
            <td><label>Date</label></td>
            <td><%=f.text_field "production_date", :class=>'dateTextBox date_picker'%></td>
            <td><label>Shift</label></td>
            <td><%=f.text_field "shift"%></td>
            <td><label>Operator Name</label></td>
            <td><%=f.text_field "operator_name"%></td>            
          </tr>
        </table>        
        <br class="clear"/>
        <div id="detail" style="display:block;"></div>
        <div class="txtC" id="submit_div">
          <%= f.submit "Update" , :class=>'button submit_buttons'%>
          <%=link_to 'Cancel', slittingproductions_url, :class => "linkbutton" %>
        </div>        
    <%end%>
  </div>
</div>
</div>
