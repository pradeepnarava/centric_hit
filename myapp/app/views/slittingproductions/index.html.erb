<%= render :partial=>'layouts/process_leftside_bar' %>
<div id="center-column">
<div class="top-bar">
  <%= link_to 'New', new_slittingproduction_path,:class=>"button" %>
  <h1>Listing Slitting Productions</h1>
</div><br />
<div class="table">
  <%= image_tag '/images/bg-th-left.gif',:height=>"7", :width=>"8",:alt=>"",:title=>"",:class=>"left" %>
  <%= image_tag '/images/bg-th-right.gif',:height=>"7", :width=>"7",:alt=>"",:title=>"",:class=>"right" %>
  <table class="listing" cellpadding="0" cellspacing="0" width="100%">
  <tr>
    <th>Raw Material</th>
     <th>Slitting Coil NO</th>
    <th>Slitting</th>
    <th>Shift</th>
    <th>Operator name</th>
    <th>Source</th>
    <th>Input weight</th>
    <th>Width</th>
    <th>Thickness</th>
    <th>Grade</th>
    <th>Type</th>
    <th>Width slitting</th>
    <th>No of slits slitting</th>
    <!--<th>Slit coil weight</th>
    <th>Slit weight</th>
    <th>Scrap weight</th>-->
    <th>Status</th>
    <th>Remarks</th>
    <th>Action</th>
  </tr>

<% for slittingproduction in @slittingproductions %>
  <tr class="<%=cycle("bg1", "bg2")%>">
    <td><%=h slittingproduction.rawmaterial.name %></td>
       <td><%=h slittingproduction.slitting_coil_no %></td>
    <td><%#=h slittingproduction.slitting.slitting_coil_no %></td>
    <td><%=h slittingproduction.shift %></td>
    <td><%=h slittingproduction.operator_name %></td>
    <td><%=h slittingproduction.source %></td>
    <td><%=h slittingproduction.input_weight %></td>
    <td><%=h slittingproduction.width %></td>
    <td><%=h slittingproduction.thickness %></td>
    <td><%=h slittingproduction.grade %></td>
    <td><%=h slittingproduction.type %></td>
    <td><%=h slittingproduction.width_slitting %></td>
    <td><%=h slittingproduction.no_of_slits_slitting %></td>
    <!--<td><%#=h slittingproduction.slit_coil_weight %></td>
    <td><%#=h slittingproduction.slit_weight %></td>
    <td><%#=h slittingproduction.scrap_weight %></td>-->
    <td><%=h slittingproduction.status==1?'Slitting WIP':'TubeMil WIP' %></td>
    <td><%=h slittingproduction.remarks %></td>
    <td>
      <div class="fr" style="float:left;">
          <%=  link_to(image_tag('/images/livia_portal/icon_edit.gif',{:alt =>"Edit", :title=>"Edit", :border => 0, :hspace => "0"}),  edit_slittingproduction_path(slittingproduction))%>
          <%=  link_to(image_tag('/images/livia_portal/icon_reject_1.gif',{:alt =>"DeActivate", :title=>"DeActivate", :confirm => 'Are you sure?',:border => 0, :hspace => "2"}),slittingproduction, :confirm => 'Are you sure?', :method => :delete) %>
        </div>
    </td>
  </tr>
<% end %>
</table>
</div>
<br />
</div>