<%= render :partial=>'layouts/order_leftside_bar' %>
<div id="center-column">
<div class="top-bar">
  <%= link_to 'New', new_salesplan_path,:class=>"button" %>
  <h1>Listing SalesPlans</h1>
</div><br />
<div class="table">
  <%= image_tag '/images/bg-th-left.gif',:height=>"7", :width=>"8",:alt=>"",:title=>"",:class=>"left" %>
  <%= image_tag '/images/bg-th-right.gif',:height=>"7", :width=>"7",:alt=>"",:title=>"",:class=>"right" %>
  <table class="listing" cellpadding="0" cellspacing="0" width="100%">
    <tr>

      <th>Customer name</th>   
      <th>Serialize</th>
      <th> Order Quantity</th>
      <th>Order Weight</th>
      <th>Action</th>
    </tr>

    <% for salesplan in @salesplans %>
      <tr>
        <td><%=h salesplan.customer.name %></td>      
        <td><%=h salesplan.serialize.name %></td>
        <td><%=h salesplan.order_quantity %></td>
        <td><%=h salesplan.order_wt %></td>

   
        <td>
          <div class="fr" style="float:left;">
            <%=  link_to(image_tag('/images/livia_portal/icon_edit.gif',{:alt =>"Edit", :title=>"Edit", :border => 0, :hspace => "0"}),  edit_salesplan_path(salesplan))%>
            <%=  link_to(image_tag('/images/livia_portal/icon_reject_1.gif',{:alt =>"DeActivate", :title=>"DeActivate",:border => 0, :hspace => "2"}), salesplan, :confirm => 'Are you sure?', :method => :delete) %>
          </div>
        </td>
      </tr>
    <% end %>
  </table>
</div>
<br />
</div>



