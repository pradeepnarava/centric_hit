<%= render :partial=>'layouts/stock_leftside_bar' %>
<div id="center-column">
<div class="top-bar">
  <%= link_to 'New',  new_rawmaterial_category_path,:class=>"button" %>
  <h1>Listing RawMaterial Categories</h1>
</div><br />
<div class="table">
  <%= image_tag '/images/bg-th-left.gif',:height=>"7", :width=>"8",:alt=>"",:title=>"",:class=>"left" %>
  <%= image_tag '/images/bg-th-right.gif',:height=>"7", :width=>"7",:alt=>"",:title=>"",:class=>"right" %>
  <table class="listing" cellpadding="0" cellspacing="0" width="100%">
  <tr>
    <th>Name</th>
    <th>Grade</th>
    <th>Action</th>
  </tr>

<% for rawmaterial_category in @rawmaterial_categories %>
  <tr class="<%=cycle("bg1", "bg2")%>">
    <td><%=h rawmaterial_category.name %></td>
    <td><%=h rawmaterial_category.grade %></td>
    <td align="center">
          <%=  link_to(image_tag('/images/livia_portal/icon_edit.gif',{:alt =>"Edit", :title=>"Edit", :border => 0, :hspace => "0"}),  edit_rawmaterial_category_path(rawmaterial_category))%>
          <%=  link_to(image_tag('/images/livia_portal/icon_reject_1.gif',{:alt =>"DeActivate", :title=>"DeActivate", :confirm => 'Are you sure?',:border => 0, :hspace => "2"}),rawmaterial_category, :method => :delete) %>
</td>
  </tr>
<% end %>
</table>
</div>
<br />
</div>


