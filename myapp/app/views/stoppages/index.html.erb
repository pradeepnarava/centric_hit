


<%= render :partial=>'layouts/process_leftside_bar' %>
<div id="center-column">
<div class="top-bar">
  <%= link_to 'New', new_stoppage_path,:class=>"button" %>
  <h1>Stoppage Types</h1>
</div><br />
<div class="table">
  <%= image_tag '/images/bg-th-left.gif',:height=>"7", :width=>"8",:alt=>"",:title=>"",:class=>"left" %>
  <%= image_tag '/images/bg-th-right.gif',:height=>"7", :width=>"7",:alt=>"",:title=>"",:class=>"right" %>
  <table class="listing" cellpadding="0" cellspacing="0" width="100%">
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Action</th>
  </tr>

  <% for stoppage in @stoppages %>
  <tr class="<%=cycle("bg1", "bg2")%>">
    <td><%=h stoppage.name %></td>
    <td>
      <%if stoppage.type_stop==1%>Operational<%end%>
<%if stoppage.type_stop== 2%> Mechanical<%end%>
<%if stoppage.type_stop== 3%> Electrical<%end%>
  <%if stoppage.type_stop== 4%> Others<%end%>
    </td>



    <td>
          <%=  link_to(image_tag('/images/livia_portal/icon_edit.gif',{:alt =>"Edit", :title=>"Edit", :border => 0, :hspace => "0"}),  edit_stoppage_path(stoppage))%>
          <%=  link_to(image_tag('/images/livia_portal/icon_reject_1.gif',{:alt =>"DeActivate", :title=>"DeActivate", :confirm => 'Are you sure?',:border => 0, :hspace => "2"}), stoppage, :confirm => 'Are you sure?', :method => :delete) %>
      </td>
  </tr>
<% end %>
</table>
</div>
<br />
</div>




