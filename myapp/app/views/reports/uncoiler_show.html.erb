<title>Slitting Production Report</title>
<style type="text/css">
	@media print {
		input#btnPrint {
		display: none;
		}
	}
</style>
<input type="button" id="btnPrint" onclick="window.print();" value="Print Page" />
<br/>
<table width="100%" border="1">
  <tr>
    <td align="center" colspan="2">
      <b style="font-size:18px;">
        Uncoiler Report
      </b>
    </td>
  </tr>
  <tr>
    <td style="width:220px">
      <b>Date:-</b>&nbsp;<%=@uncoiler.date.to_date.strftime('%d-%m-%Y') if @uncoiler.date%>
    </td>  
    <td><b>Shift:-</b>&nbsp;<%=@uncoiler.shift rescue "-"%></td>
    
  </tr>
  <tr>
    <td colspan="2">
      <b>Operator Name:-</b>&nbsp;<%=h Employee.getname(@uncoiler.operator_id) rescue "-" %>
    </td>
  </tr>
</table>
<br/>
<table cellpadding="0" cellspacing="0" width="100%" border="1">
  <tr>
    <td colspan="3" align="center">
    
    </td>
    <td colspan="4" align="center">
      <b style="font-size:14px;"> Standard</b>
    </td>
    <td colspan="4" align="center">
      <b style="font-size:14px;">Actual Observations</b>
    </td>
  </tr>
  <tr>
    <td>S.No</td>
    <td>Coil No.</td>
    <td>Tube OD<br/>(MM)</td>
    <td>Width</td>
    <td>Thick</td>
    <td>Grade</td>
    <td>Type</td>
    <td>Width</td>
    <td>Thick</td>
    <td>Grade</td>
    <td>Type</td>
  </tr>
  <%i=1%>
  <%@uncoiler_details.each do |obj|%>
  <tr>
    <td><%=i%></td>
    <td><%=obj.slittingproduction.rawmaterial.name rescue "-"%></td>
    <td><%=obj.tube_od rescue "-"%></td>
    <td><%=obj.width rescue "-"%></td>
    <td><%=obj.thickness rescue "-"%></td>
    <td><%=obj.grade rescue "-"%></td>
    <td><%=obj.type rescue "-"%></td>
    <td><%=obj.width_actual rescue "-"%></td>
     <td><%=obj.thickness_actual rescue "-"%></td>
    <td><%=obj.grade_actual rescue "-"%></td>
    <td><%=obj.type_actual rescue "-"%></td>
    <%i=i+1%>
  </tr>
  <%end%>
</table>
<br/>
<br/>
<table width="100%" cellpadding="0" cellspacing="0" style="padding-left:20px;">
  <tr>
    <td>
      Production Supervisor
    </td>
    <td>
      Quality Supervisor
    </td>
    <td>
      Authorised Signature
    </td>
  </tr>
</table>
<br/>
<input type="button" id="btnPrint" onclick="window.print();" value="Print Page" />