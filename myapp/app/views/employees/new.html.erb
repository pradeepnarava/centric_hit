<%= render :partial=>'layouts/centric_left_bar' %>
<div id="center-column">
  <div class="gridDiv">
    <div class="titleHead">Employee</div>
    <div class="formMain">
      <% form_for(@employee) do |f| %>
        <%if(@employee.errors.length >0)%>
          <div class='errorCont'>
            <%= error_messages_for(:employee)%>
            <div class="clear"></div>
          </div>
        <%end%>
        <div class="fl w48" style="width:25%">
          <p><%= f.label :first_name %>
            <%= f.text_field :first_name %>
            <div class="clear" id="cl_5"></div>
          </p>
          <p>
            <label> Department </label>
            <%= collection_select(:employee, :department_id, @departments, :id, :name, {:include_blank => 'Please select'})%>
            <div class="clear" id="cl_5"></div>
          </p>
          <p>
            <%= f.label :street %>
            <%= f.text_field :street %>
            <div class="clear" id="cl_5"></div>
          </p>
          <p>
            <%= f.label :address %>
            <%= f.text_area :address ,:rows=>'4'%>
          </p>
        
        </div>
        <div class="fl w48" style="width:25%;" >
          <p><%= f.label :last_name %><%= f.text_field :last_name %> <div class="clear" id="cl_5"></div>
          </p>
          <p>
          <%= f.label :phone %></p><p>
          <%= f.text_field :phone %>
          </p>
          <p>
            <%= f.label :city %>
            <%= f.text_field :city %>
            <div class="clear" id="cl_5"></div>
          </p>
          <p>
            <%= f.label :zipcode %>
            <%= f.text_field :zipcode %>
            <div class="clear" id="cl_5"></div>
          </p>
        </div>
        <div class="fl w48" style="width:50%">
        
          <p style="width:140px;">
          <%= f.label :birthdate %></p><p style="width:350px;">
          <%= f.date_select :birthdate, :start_year => 1950 %>
            <div class="clear" id="cl_5"></div>
          </p><br/>
          <p style="width:140px;">
          <%= f.label :mobile %></p><p>
          <%= f.text_field :mobile %>
          </p>
          <p style="width:140px;">
          <%= f.label :state %></p><p>
          <%= f.text_field :state %>
          </p>
          <p></p><p></p>
        <div></div></div><br/><br/><br/><br/><br/><br/><br/><br/><br/>
        <div class="txtC" id="submit_div">
          <%= f.submit "Create" , :class=>'button submit_buttons'%>
          <%=link_to 'Cancel', employees_url, :class => "linkbutton" %>
        </div>
      <% end %>
      
    </div>
</div></div><br/>