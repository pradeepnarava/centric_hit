<%= render :partial=>'layouts/centric_left_bar' %>
<div id="center-column">
<div class="top-bar">
  <%= link_to 'New', new_employee_path,:class=>"button" %>
    <h1>Listing employees</h1>
</div><br />
<div class="table">  
  <%= image_tag '/images/bg-th-left.gif',:height=>"7", :width=>"8",:alt=>"",:title=>"",:class=>"left" %>
  <%= image_tag '/images/bg-th-right.gif',:height=>"7", :width=>"7",:alt=>"",:title=>"",:class=>"right" %>

    <table class="listing" cellpadding="0" cellspacing="0" width="100%">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Birthdate</th>
        <th>Phone</th>
        <th>Mobile</th>
        <th>Street</th>
        <th>City</th>
        <th>State</th>
        <th>Zipcode</th>
        <th>Department Name</th>
        <th>Action</th>        
      </tr>

    <% @employees.each do |employee| %>
      <tr  class="<%=cycle("bg1", "bg2")%>">
        <td><%=h employee.first_name %></td>
        <td><%=h employee.last_name %></td>
        <td><%=h employee.birthdate.strftime('%d-%b-%Y') %></td>
        <td><%=h employee.phone %></td>
        <td><%=h employee.mobile %></td>
        <td><%=h employee.street %></td>
        <td><%=h employee.city %></td>
        <td><%=h employee.state %></td>
        <td><%=h employee.zipcode %></td>
        <td><%=h employee.department.name  if employee.department%></td>
        <td>
          <%=  link_to(image_tag('/images/livia_portal/icon_edit.gif',{:alt =>"Edit", :title=>"Edit", :border => 0, :hspace => "0"}),  edit_employee_path(employee))%>
          <%=  link_to(image_tag('/images/livia_portal/icon_reject_1.gif',{:alt =>"DeActivate", :title=>"DeActivate", :confirm => 'Are you sure?',:border => 0, :hspace => "2"}), employee, :confirm => 'Are you sure?', :method => :delete) %>            
        </td>
      </tr>
    <% end %>
    </table>
</div>
<br />

</div>