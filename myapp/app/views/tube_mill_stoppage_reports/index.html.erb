<%= render :partial=>'layouts/process_leftside_bar' %>
<div id="center-column">
<div class="top-bar">
  <%= link_to 'New', new_tube_mill_stoppage_report_path,:class=>"button" %>
  <h1>Listing Tube Mill Stoppage Reports</h1>
</div>
<br />
<div class="table">
  <%= image_tag '/images/bg-th-left.gif',:height=>"7", :width=>"8",:alt=>"",:title=>"",:class=>"left" %>
  <%= image_tag '/images/bg-th-right.gif',:height=>"7", :width=>"7",:alt=>"",:title=>"",:class=>"right" %>
  <table class="listing" cellpadding="0" cellspacing="0" width="100%">
  <tr>
    <th>Date</th>
    <th>Shift</th>
    <th>Type</th>    
    <th>Description of breakdown</th>
    <th>From</th>
    <th>To</th>
    <th>Total time</th>
    <th>Remarks</th>  
    <th>Shift incharge</th>
    <th>Action</th>
  </tr>

<% for tube_mill_stoppage_report in @tube_mill_stoppage_reports %>
  <tr>
    <td><%=h tube_mill_stoppage_report.date.strftime('%d-%b-%Y') %></td>
    <td><%=h tube_mill_stoppage_report.shift %></td>
    <td><%=h Stoppage::STOPAGE_TYPE[tube_mill_stoppage_report.type_stop][0] %></td>    
    <td><%=h tube_mill_stoppage_report.description_of_breakdown %></td>
   <td><%=h tube_mill_stoppage_report.from.strftime('%I:%M %p') %></td>
    <td><%=h tube_mill_stoppage_report.to.strftime('%I:%M %p') %></td>
    <td><%=h tube_mill_stoppage_report.total_time %></td>
    <td><%=h tube_mill_stoppage_report.remarks %></td> 
    <td><%=h tube_mill_stoppage_report.shift_incharge %></td>
    <td>
      <div class="fr" style="float:left;">
          <%=  link_to(image_tag('/images/livia_portal/icon_edit.gif',{:alt =>"Edit", :title=>"Edit", :border => 0, :hspace => "0"}),  edit_tube_mill_stoppage_report_path(tube_mill_stoppage_report) )%>
          <%=  link_to(image_tag('/images/livia_portal/icon_reject_1.gif',{:alt =>"DeActivate", :title=>"DeActivate", :confirm => 'Are you sure?',:border => 0, :hspace => "2"}),tube_mill_stoppage_report, :confirm => 'Are you sure?', :method => :delete ) %>
        </div>
</td>
  </tr>
<% end %>
</table>
</div>
<br />
</div>